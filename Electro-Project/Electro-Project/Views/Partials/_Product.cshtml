@{

}

<div class="col-md-4 col-xs-6">

    <div class="product">
        <div class="product-img">
            <img src="~/img/@(Model.Media.FirstOrDefault() != null ? Model.Media.FirstOrDefault().ImageURL : "noImg.jpg" )" alt="" width="230" height="230">
            <div class="product-label">
                <span class="sale">-30%</span>
                <span class="new">NEW</span>
            </div>
        </div>
        <div class="product-body">
            <p class="product-category">@Model.Name</p>
            <h3 class="product-name"><a href="#">@Model.Name</a></h3>
            <h4 class="product-price">@Model.Price <del class="product-old-price"> @(@Model.Price - 2000)</del></h4>
            <div class="product-rating">
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
            </div>
            <div class="product-btns">
                <button class="add-to-wishlist"><i class="fa fa-heart-o"></i><span class="tooltipp">add to wishlist</span></button>
                @if (this.User.IsInRole("Admin")){
                <button class="add-to-compare"><a asp-action="Edit" asp-route-id="@Model.Id"> <i class="fa fa-pencil"></i><span class="tooltipp">edit</span></a></button>
                <button class="add-to-compare"><a asp-action="Delete" asp-route-id="@Model.Id"> <i class="fa fa-trash"></i><span class="tooltipp">delete</span></a></button>
                }
                <button class="quick-view">
                    <a asp-controller=@(Model.GetType().ToString().Split(".")[2] + "s" )
                       asp-action="Details" asp-route-id="@Model.Id">
                        <i class="fa fa-eye"></i><span class="tooltipp">quick view</span>
                    </a>
                </button>
            </div>
        </div>
        <div class="add-to-cart">
            <a asp-controller="Orders" asp-action="AddModelToShoppingCart" asp-route-id="@Model.Id"><button class="add-to-cart-btn"><i class="fa fa-shopping-cart"></i> add to cart</button></a>
        </div>
    </div>
</div>